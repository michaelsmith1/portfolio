extends ../_template

block variables
    -var title = 'Мои работы'

block content
    .wrapper.wrapper_mod
        + preloader
        section.gsection#parallax-Scroll
            .bg.js-parallax-bg
                img(src='assets/img/bg.jpg').bg__img
            .soclinks__mod
                ul.soclinks__list
                    each item in [{name:'vk', link:'https://vk.com/id391548754'}, {name:'github-alt', link:'https://github.com/michaelsmith1'}, {name:'linkedin', link:'#'}]
                        li.soclinks__list__item
                            a(href=`${item.link}` target='_blank').soclinks__list__item__link.soclinks__list__item__link_colbel
                                i(class=`fa fa-${item.name} fa-2x` aria-hidden='true')
            + menu
            .usercart.usercart_parallax
                .usercart__fon.js-parallax-title
                    img(src='assets/img/portfolio_header.png').usercart__fon__img
                .usercart-info.usercart-info__mod.js-parallax-user
                    img(src="/assets/img/me.jpg").usercart__photo
                    .usercart-info__name
                        | Михаил Журкин
                    .usercart-info__description
                        | Личный сайт веб разработчика
            .arrow.down_arrow
                a(href="#")
                    i(class='fa fa-chevron-down fa-2x down-arrow__icon' aria-hidden='true')
        section.about.clearfix
            .about__left
                svg(
                viewbox="0 0 1000 100"
                preserveAspectRatio="none"
                class="triangle")
                    polygon(points="0,0 0,100 1000,100")
            .about__right
                svg(
                viewbox="0 0 1000 100"
                preserveAspectRatio="none"
                class="triangle")
                    polygon(points="0,100 1000,100 1000,0")
        section.works
            .title.works__header
                h1.works__header__text Мои работы

            .works__slider#slider
                .works__slider__info
                    .works__slider__info__container
                        .title.works__slider__info__container__title.js-slider-title Сайт строительной компании
                        .works__slider__info__container__desc.js-slider-tehnologyes Html, css, Javascript, Wordpress
                        .works__slider__info__container__but
                            a.works__slider__info__container__but__link.js-slider-site-link(href='#')
                                | Помотреть сайт
                .works__slider__photo
                    .works__slider__photo__cont.js-slider-screen
                        img.works__slider__photo__cont__img.js-slider-screen-img(src='' alt='')
                .works__slider__control
                        .works__slider__control__arrow
                            a.works__slider__control__arrow__arrow.works__slider__control__arrow_prev.js-slide-prev-but(href='#' title='prev_slider' )
                                ul.works__slider__control__arrow__list.js-slider-list
                                    li.works__slider__control__arrow__list__item.js-slider-item(data-full='assets/img/works/loft.png' data-title='Школа Веб-разработки' data-skills='Html5' data-link='http://bodyfence.ru/')
                                        img.works__slider__control__arrow__list__item__img(src='assets/img/works/thumb/loft.png')
                                    li.works__slider__control__arrow__list__item.js-slider-item(data-full='assets/img/works/bodyfence.png' data-title='Антигравийная защита кузова' data-skills='Html5 JavaScript' data-link='vienn.ru')
                                        img.works__slider__control__arrow__list__item__img(src='assets/img/works/thumb/bodyfence.png')
                                    li.works__slider__control__arrow__list__item.js-slider-item(data-full='assets/img/works/thumb/Vienn-Datailing.png' data-title='Детейлинг студия' data-skills='Html5 CSS3' data-link='vienn.ru')
                                        img.works__slider__control__arrow__list__item__img(src='assets/img/works/thumb/Vienn-Datailing.png')
                        .works__slider__control__arrow
                            a.works__slider__control__arrow__arrow.works__slider__control__arrow_next.js-slide-next-but(href='#' title='prev_slider' )
                                ul.works__slider__control__arrow__list
                                    li.works__slider__control__arrow__list__item.works__slider__control__arrow__list__item_next.js-slider-item(data-full='assets/img/works/loft.png' data-title='Школа Веб-разработки' data-skills='Html5' data-link='http://bodyfence.ru/')
                                        img.works__slider__control__arrow__list__item__img(src='assets/img/works/thumb/loft.png')
                                    li.works__slider__control__arrow__list__item.works__slider__control__arrow__list__item_next.js-slider-item(data-full='assets/img/works/bodyfence.png' data-title='Антигравийная защита кузова' data-skills='Html5 JavaScript' data-link='vienn.ru')
                                        img.works__slider__control__arrow__list__item__img(src='assets/img/works/thumb/bodyfence.png')
                                    li.works__slider__control__arrow__list__item.works__slider__control__arrow__list__item_next.js-slider-item(data-full='assets/img/works/thumb/Vienn-Datailing.png' data-title='Детейлинг студия' data-skills='Html5 CSS3' data-link='vienn.ru')
                                        img.works__slider__control__arrow__list__item__img(src='assets/img/works/thumb/Vienn-Datailing.png')



        section.aboutme
            .title.title-about.title-aboutme.about__user__info__title
                | Что обо мне говорят
            .container__feed
                .feedbacks.clearfix
                    .feedbacks__item
                        .feedbacks__item__link.feedbacks__item__icon
                            <i class="fa fa-quote-left fa-2x" aria-hidden="true"></i>
                        .feedbacks__item__link.feedbacks__item__text
                            p
                                | Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool!
                                | 2 месяца только самых тяжелых испытаний и бессонных ночей!
                        .feedbacks__item__link.feedbacks__item__profile
                            img(src='assets/userfiles/Layer 8.png').feedbacks__item__profile__photo
                            .feedbacks__item__profile__info
                                p.p.pb Ковальчук Дмитрий
                                p.p основатель Loftschool
                    .feedbacks__item
                        .feedbacks__item__link.feedbacks__item__icon
                            <i class="fa fa-quote-left fa-2x" aria-hidden="true"></i>
                        .feedbacks__item__link.feedbacks__item__text
                            p
                                | Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
                        .feedbacks__item__link.feedbacks__item__profile
                            img(src='assets/userfiles/9.png').feedbacks__item__profile__photo
                            .feedbacks__item__profile__info
                                p.p.pb Сабанцев Владимир
                                p.p преподаватель
            .contform
                .blur__form(id='blurid')
                    .blur
                    .title.contform__title Связаться со мной
                    form.form
                        input(placeholder='Имя' type='name').form__input
                        input(placeholder='Email' type='mail').form__input
                        textarea(placeholder='Ваше сообщение' rows='5').form__input.form__text
                        .form__menu
                            input(type='submit' value='Отправить').form__menu__input.form__submit
                            input(type='submit' value='Очистить').form__menu__input.form__clear
            .arrow.up_arrow
                a.arrow__a(href="#")
                    i(class='fa fa-chevron-up fa-2x down-arrow__icon' aria-hidden='true')


            .empty
        + footer